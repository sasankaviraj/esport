@using esport.Models
@model Auction

@{
    ViewData["Title"] = "Update player";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Bid For Player</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Bid">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                                <label asp-for="TeamId" class="control-label"></label>
                                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.Teams"></select>
                                <span asp-validation-for="TeamId" class="text-danger"></span>
                            </div>
                    <div class="form-group">
                        <input type="submit" value="Bid" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

