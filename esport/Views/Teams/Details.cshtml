@using esport.Models
@model IEnumerable<Auction>

@{
    ViewData["Title"] = "Team details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @*@Model.Team.Name*@
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        @*<p class="card-text">@Model.Team.Description</p>*@
                        <p class="card-text">
                            <b>Team Details</b>
                        </p>
                        <p class="card-text">
                            <b>Players: </b>
                            <hr />
                            <div class="row">
                                @foreach (var player in Model)
                                {
                                    <div class="col-6 text-center">
                                       
                                        <br />
                                        <a asp-controller="Player" asp-action="Details" asp-route-id="@player.PlayerId">@player.Player.FullName</a>
                                    </div>
                                    
                                    <div class="col-6 text-center">
                                       
                                        <br />
                                        <p>$@player.Price</p>
                                    </div>
                                }
                            </div>
                        </p>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                           
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>